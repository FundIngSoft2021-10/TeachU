<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.Perfil">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="Perfil"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/Nombre_Perfil"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="180dp"
        android:enabled="false"
        android:textSize="20dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btNombre_Perfil"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="190dp"
        android:text="Edit"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/Apellido_Perfil"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="260dp"
        android:enabled="false"
        android:textSize="20dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btEdit_Apellido"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="260dp"
        android:text="Edit"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/Correo_Perfil"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="330dp"
        android:enabled="false"
        android:textSize="20dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btEdit_Correo"
        android:layout_width="57dp"
        android:layout_height="36dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="330dp"
        android:text="Edit"
        android:textSize="10sp" />


    <EditText
        android:id="@+id/Usuario_Perfil"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="400dp"
        android:enabled="false"
        android:textSize="20dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btEdit_Usuario"
        android:layout_width="56dp"
        android:layout_height="37dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="400dp"
        android:text="Edit"
        android:textSize="10sp" />

    <Button
        android:id="@+id/Bt_Guardar_Cambios"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="500dp"
        android:text="Guardar Cambios" />

</FrameLayout>