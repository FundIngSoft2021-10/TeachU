<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.Registro">

    <ScrollView
        android:layout_width="506dp"
        android:layout_height="760dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <EditText
        android:id="@+id/ET_Nombre_Registro"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_imput"
        android:ems="10"
        android:hint="Nombre"
        android:padding="3dp"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FBF7F9"
        android:textColorHint="#F5F1F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <Button
        android:id="@+id/btn_registro"
        android:layout_width="103dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/custtom_button"
        android:text="Registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.238" />

    <EditText
        android:id="@+id/ET_correoIns_Registro"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_imput"
        android:ems="10"
        android:hint="Correo Institucional"
        android:padding="3dp"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#EFEBEC"
        android:textColorHint="#F8F8FA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_Apellido_Registro" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Registro"
        android:textColor="@color/design_default_color_primary"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ET_Apellido_Registro"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_imput"
        android:ems="10"
        android:hint="Apellido"
        android:padding="3dp"
        android:inputType="textPersonName"
        android:textColor="#F9F6FA"
        android:textColorHint="#FBFAFB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_Nombre_Registro" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="222dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ED_contrasena__Registro">

        <RadioButton
            android:id="@+id/radio_Estudiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estudiante"
            android:button="@drawable/custom_radiobuton"
            android:textColor="#673AB7"
            android:textColorHighlight="#673AB7"
            android:textColorHint="#673AB7"
            android:textColorLink="#673AB7" />

        <RadioButton
            android:id="@+id/radio_Tutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#673AB7"
            android:text="Tutor"
            android:button="@drawable/custom_radiobuton"
            android:textColor="#673AB7"
            android:textColorLink="#673AB7" />
    </RadioGroup>

    <EditText
        android:id="@+id/ET_NombreU_Registro"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_imput"
        android:ems="10"
        android:hint="Nombre de usuario"
        android:inputType="textPersonName"
        android:text=""
        android:padding="3dp"
        android:textColor="#F2EEF3"
        android:textColorHint="#F9F8FA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_correoIns_Registro" />

    <EditText
        android:id="@+id/ED_contrasena__Registro"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_imput"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FDFAFB"
        android:padding="3dp"
        android:textColorHint="#F6F5F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_NombreU_Registro" />

</androidx.constraintlayout.widget.ConstraintLayout>